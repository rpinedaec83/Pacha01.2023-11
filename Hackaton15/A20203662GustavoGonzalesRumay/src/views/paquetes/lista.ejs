<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Listado de Paquetes</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Paquetes Registrados</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Descripci√≥n</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% paquetes.forEach(paquete => { %>
                    <tr>
                        <td><%= paquete.descripcion %></td>
                        <td><%= paquete.estadoTransito %></td>
                        <td>
                            <a href="/paquetes/editar/<%= paquete._id %>" class="btn btn-primary">Editar</a>
                            <a href="/paquetes/eliminar/<%= paquete._id %>" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
